{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es6"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "bin",
    "baseUrl": "./",
    "paths": {
      "@domains/*": ["Domain/*"],
      "@app/*": ["Applications/*"],
      "@common/*": ["Common/*"],
      "@infra/*": ["Infrastructure/*"],
      "@present/*": ["Presentation/*"],
      "@persist/*": ["Persistence/*"],
      "@tests/*": ["tests/*"]
    },
    "types": [
      "jest",
      "mocha"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}